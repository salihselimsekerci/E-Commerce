@model E_Commerce.Models.SifreDegistirme
@{
    ViewBag.Title = "YeniSifre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_KategoriListe", "Kategori")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("ToplamTutar", "Cart")
            </ul>
        </div>


        @Html.Action("PopulerUrunler", "Home")

    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index/">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Kayıt</li>
        </ul>

        <hr class="soft" />
        <div class="well">
            @using (Html.BeginForm("YeniSifre", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <h3> Şifrenizi Değiştirebilirsiniz</h3>
                @Html.AntiForgeryToken()


                <div class="control-group">
                    <label class="control-label" for="inputFname">Eski Şifre </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(x => x.EskiSifre, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(x => x.EskiSifre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputFname">Yeni Şifre </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(x => x.YeniSifre, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(x => x.YeniSifre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="inputFname">Yeni Şifre Tekrar </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(x => x.YeniSifreTekrar, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(x => x.YeniSifreTekrar, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>




                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Güncelle" class="exclusive shopBtn">
                    </div>
                </div>

            }

        </div>



    </div>
</div>

