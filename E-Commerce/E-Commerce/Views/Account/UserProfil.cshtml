@model E_Commerce.Models.UserProfile
@{
    ViewBag.Title = "UserProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_KategoriListe", "Kategori")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("ToplamTutar", "Cart")
            </ul>
        </div>


        @Html.Action("PopulerUrunler", "Home")

    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index/">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Kayıt</li>
        </ul>

        <hr class="soft" />
        <div class="well">
            @using (Html.BeginForm("UserProfil", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <h3> Bilgilerinizi Güncelleyebilirsiniz</h3>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.id)

                <div class="control-group">
                    <label class="control-label" for="inputFname">Adı </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.Ad, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(x => x.Ad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputFname">Soyadı </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.Soyad, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(x => x.Soyad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="inputFname">Kullanıcı Adı </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.KullanıcıAdi, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(x => x.KullanıcıAdi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="inputFname">Email </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Güncelle" class="exclusive shopBtn">
                        <a href="/Account/YeniSifre/">Şifre Değiştir</a>
                    </div>
                </div>

            }

        </div>



    </div>
</div>

