@model E_Commerce.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_KategoriListe", "Kategori")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("ToplamTutar", "Cart")
            </ul>
        </div>


        @Html.Action("PopulerUrunler", "Home")

    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index/">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Giriş</li>
        </ul>


        <div class="well">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <h3>Giriş</h3>




                <div class="control-group">
                    <label class="control-label" for="inputFname">Kullanıcı Adı </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.KullanıcıAd, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(x => x.KullanıcıAd, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>



                <div class="control-group">
                    <label class="control-label" for="inputFname">Şifre </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.Sifre, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(x => x.Sifre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>



                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Giriş" class="btn btn-success">
                    </div>
                </div>

            }

        </div>



    </div>
</div>

