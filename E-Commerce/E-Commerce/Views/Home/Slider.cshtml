@using E_Commerce.Entity
@model IEnumerable<Urun>
<div id="myCarousel" class="carousel slide homCar">
    <div class="carousel-inner">

        <div class="item active">
            <img style="width:100%" src="/Site/assets/img/carousel3.png" alt="Salih-Selim-Sekerci ecommerce templates">
            <div class="carousel-caption">
                <h4>Twitter Bootstrap cart</h4>
                <p><span>Very easy to integrate and expand.</span></p>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <a href="/Home/UrunDetay/@item.Id"> <img style="width:100%; max-width:698px; max-height:327px; min-height:327px; min-width:698px" src="~/Content/İmage/@item.Resim" alt="Salih-Selim-Sekerci ecommerce templates"></a>
                <div class="carousel-caption">
                    <h4>@item.Ad</h4>
                    <p><span>@item.Fiyat TL</span></p>
                </div>
            </div>
        }



    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>
